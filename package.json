{
	"name": "run-action",
	"version": "1.0.0",
	"description": "This action will run your tests on the QA.tech platform.",
	"type": "module",
	"scripts": {
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"lint:fix": "biome check --write .",
		"build": "rimraf dist && ncc build src/index.ts",
		"test": "vitest run"
	},
	"exports": {
		".": "./dist/index.js"
	},
	"engines": {
		"node": ">=20"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/QAdottech/run-action.git"
	},
	"bugs": {
		"url": "https://github.com/QAdottech/run-action/issues"
	},
	"keywords": ["QA", "actions", "QA.tech"],
	"author": "QA Tech AB",
	"license": "MIT",
	"packageManager": "pnpm@9.15.0",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.10.7",
		"@vercel/ncc": "^0.38.3",
		"rimraf": "^6.0.1",
		"typescript": "^5.7.3",
		"vitest": "^3.0.4"
	},
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@actions/github": "^6.0.0",
		"node-fetch": "^3.3.2"
	}
}
