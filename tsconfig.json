{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["esnext"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": false
	},
	"include": ["src/**/*", "src/__tests__/**/*"],
	"exclude": ["dist/**/*", "node_modules"]
}
